<%- include('../partials/head', {
  title: 'Rejestracja – Langsy',
  styles: ['user/register'],
  scripts: ['user/validate_register',]
}) %>

<body>
  <%- include('../partials/header') %>

  <main>
    <div class="login-container">
      <h1>Zarejestruj się</h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <p class="error"><%= error %></p>
      <% } %>

      <form id="registerForm" class="login-form" action="/user/register" method="POST" novalidate>
        <div class="login-div">
          <label for="email">E-mail:*</label>
          <input type="email" name="email" id="email" required />
        </div>

        <div class="login-div">
          <label for="username">Login:*</label>
          <input type="text" name="login" id="username" required />
        </div>

        <div class="login-div">
          <label for="password">Hasło:*</label>
          <input type="password" name="password" id="password" required />
        </div>

        <div class="login-div">
          <label for="confirmPassword">Powtórz hasło:*</label>
          <input type="password" name="confirmPassword" id="confirmPassword" required />
        </div>

        <div class="error" id="passwordError" style="display: none;">
          Podane hasła nie są takie same.
        </div>

        <button type="submit">Zarejestruj</button>
      </form>

      <p>Masz już konto? <a href="/user/login">Zaloguj się</a></p>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
