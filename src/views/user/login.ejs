<%- include('../partials/head', {
  title: 'Logowanie – Langsy',
  styles: ['user/login'],
  scripts: ['user/login']
}) %>

<body>
  <%- include('../partials/header') %>
  <main class="login-container">
        <h1>Zaloguj się</h1>


        <form action="/user" method="POST" class="login-form">
            <label for="email">E-mail*</label>
            <input type="email" id="email" name="email" required autocomplete="email">

            <label for="password">Hasło*</label>
            <input type="password" id="password" name="haslo" required autocomplete="current-password">

            <button type="submit">Zaloguj</button>
        </form>

        <p>Nie masz jeszcze konta? <a href="/user/register">Zarejestruj się</a></p>
        <p>Zapomniałeś hasła? <a href="/user/forgot">Zresetuj je</a></p>
    </main>


  <%- include('../partials/footer') %>
</body>
